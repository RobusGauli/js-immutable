{
  "env": {
    "mocha": true
  },
  "rules": {
    "no-underscore-dangle": "off",
    "no-confusing-arrow": "off",
    "no-restricted-syntax": "off",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "optionalDependencies": false,
        "peerDependencies": false
      }
    ],
    "no-unused-expressions": "off",
    "padded-blocks": "off"
  }
}